{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/"],
  "exclude": ["src/__tests__/**", "dist"]
}
